{# src/BepsElectionBundle/Resources/views/Main/index.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>{% block title %}Default page{% endblock %}</title>

	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    	<!-- Bootstrap -->
    	<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
    	<!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
    	{% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
		{% block additionalcssfiles %}<link href="{{ asset('css/election.css') }}" rel="stylesheet" media="screen">{% endblock %}
    	

</head>

<body>

 	{% block body %}
    <!-- menu du haut -->
			{% block topnav %}
			{% set navigation = {'admin': 'users administration', 'manage' : 'manage countries & parties'   }  %}
		    <nav class="navbar navbar-inverse navbar-fixed-top">
		      <div class="container">
		        <div class="navbar-header">
		          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
		            <span class="sr-only">Toggle navigation</span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		          </button>
		          <a class="navbar-brand" href="{{  path('homepage')  }}">Workflow engine</a>
		        </div>
		        <div id="navbar" class="collapse navbar-collapse">
		          <ul class="nav navbar-nav">
		     {% for key, item in navigation %}
		          	<li {% if key == app.request.get('_route') %}  class="active" {% endif %}><a href="{{ url(key) }}">{{ item }}</a></li>
		       {% endfor %}    	
		          </ul>
		        </div><!--/.nav-collapse -->
		      </div>
		    </nav>
			{% endblock %}

 		{% block container %}
   		 <div class="container">
   		 <div class="election-template">
   		 			{% block messages %}
 					{% if app.
 					session.started %}
				    {% for flashMessage in app.session.flashbag.get('notice') %}
				        <div class="alert alert-{{ flashMessage.alert }} alert-dismissible" role="alert">
				            <button type="button" class="close" data-dismiss="alert">
				                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
				            </button>
				            <strong>{{ flashMessage.title }}</strong> {{ flashMessage.message }}
				        </div>
				    {% endfor %}
				{% endif %}
			     {% endblock %}	
                {% block dashboardcontainer %}
		      
		        <h1>Welcome to the project engine</h1>
		        <span class="label label-info">Info</span>
		        <p class="lead">The project is a work in progress.</p>
		     
                {% endblock %}
             </div><!-- /.election-template -->    
    	</div><!-- /.container -->
 		{% endblock %}
 		{% block footer %}
		{% endblock %}
		   <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>		
	
	{% endblock %}
	    
		{% block additionaljsfiles %}<script type="text/javascript" src="{{ asset('js/election_pages.js') }}"></script>{% endblock %}
 	</body>
</html>
