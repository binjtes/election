{# src/BepsElectionBundle/Resources/views/Manage/index.html.twig #}
{% extends 'BepsElectionBundle:Default:index.html.twig' %}
{% block title %}Manage Elections{% endblock %}

            {% block dashboardcontainer %}
  				<div class="row">
      				<div class="col-xs-6 col-md-7"><h3>edit or create an election</h3></div>
 
		      	</div>
		      	<div class="row">
		      	   <button class="btn btn-primary" id="createelection" ><span class="glyphicon glyphicon-plus-sign"></span>{% trans with {'%item%': 'election'} from "form" %} Create a new %item%{% endtrans %}</button>
		      	</div>
		      	<div class="row col-xs-6 col-md-7" id="formhidden">
		      		<!--  form to create an election  -->
		      		<p class="text-warning">You can create an election here.</p>
			         {{ form(form) }}
		      	</div> 
		      	<table class="table table-hover">
		      	<thead>
				<th>Description</th>
			  	<th>Edit country</th>
		      	<th>delete country</th>
		      	</thead>
		      	<tbody>
				{% for election in elections %}
				<tr >
					
					<td>{{ election.description }}</td>
					
					<td><a href="{{ path('election_edit', {'electionid': election.id}) }}" class="btn btn-primary" ><span class="glyphicon glyphicon-pencil"></span> Edit</a> </td>
					<td><a href="{{ path('election_delete', {'electionid': election.id }) }}"" class="btn btn-danger" ><span class="glyphicon glyphicon-remove-sign"></span> Delete </a></td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
			
				
    	</div><!-- /.container -->
    {% endblock %}


